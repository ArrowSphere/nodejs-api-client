{
  "name": "@arrowsphere/api-client",
  "repository": {
    "type": "git",
    "url": "https://github.com/ArrowSphere/nodejs-api-client.git"
  },
  "version": "0.4.0",
  "description": "Node.js client for ArrowSphere's public API",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "scripts": {
    "build": "tsc --build",
    "clean": "rimraf build/",
    "doc": "typedoc ./src/index.ts ./src/**/index.ts",
    "lint": "eslint ./{src,tests}/**/*.ts && prettier --list-different ./{src,tests}/**/*.ts",
    "lint:fix": "eslint ./{src,tests}/**/*.ts --fix && prettier --write ./{src,tests}/**/*.ts",
    "prepublishOnly": "npm run clean && npm run build",
    "test": "mocha -r ts-node/register \"tests/**/*.ts\"",
    "test:watch": "mocha --watch -r ts-node/register \"tests/**/*.ts\"",
    "test:coverage": "nyc --check-coverage npm run test",
    "test:coverage:report": "nyc report --reporter=text-lcov | coveralls"
  },
  "keywords": [
    "arrow",
    "sphere",
    "api",
    "client",
    "nodejs"
  ],
  "author": "ArrowSphere <support@arrowsphereconnect.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "4.2.15",
    "@types/chai-as-promised": "7.1.3",
    "@types/mocha": "8.2.0",
    "@types/node": "14.14.27",
    "@types/sinon": "9.0.10",
    "@types/sinon-chai": "3.2.5",
    "@typescript-eslint/eslint-plugin": "4.15.0",
    "@typescript-eslint/parser": "4.15.0",
    "chai": "4.3.0",
    "chai-as-promised": "7.1.1",
    "coveralls": "3.1.0",
    "eslint": "7.19.0",
    "eslint-config-prettier": "7.2.0",
    "eslint-plugin-prettier": "3.3.1",
    "eslint-plugin-tsdoc": "0.2.11",
    "husky": "4.3.8",
    "joi": "17.4.0",
    "lint-staged": "10.5.4",
    "mocha": "8.3.0",
    "nock": "13.0.7",
    "nyc": "15.1.0",
    "prettier": "2.2.1",
    "rimraf": "3.0.2",
    "sinon": "9.2.4",
    "sinon-chai": "3.5.0",
    "source-map-support": "0.5.19",
    "ts-node": "9.1.1",
    "typescript": "4.1.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.(ts|js)": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "bugs": {
    "url": "https://github.com/ArrowSphere/nodejs-api-client/issues"
  },
  "homepage": "https://github.com/ArrowSphere/nodejs-api-client#readme",
  "directories": {
    "test": "tests"
  },
  "dependencies": {
    "@types/validatorjs": "3.15.0",
    "axios": "0.21.1",
    "validatorjs": "3.22.1"
  }
}
